<p id="notice"><%= notice %></p>


<h1>Quản lý hồ sơ sinh viên</h1>
<%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search" %>
<% end %>

<table class="table table-hover"">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Quê Quán</th>
      <th>Hiển Thị</th>
      <th>Chỉnh Sửa</th>
      <th>Xóa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name   %></td>
        <td><%= user.email %></td>
  
        <td><%= link_to ' Show ', user %></td>
        <td><%= link_to ' Edit ', edit_user_path(user) %></td>
        <td><%= link_to ' Delete ', user, method: :delete, data: { confirm: 'Are you want to delete ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-success"><strong><%= link_to 'Tạo hồ sơ mới', new_user_path %></strong></button>


 
